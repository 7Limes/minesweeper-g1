#width 1280
#height 720

include "tex"
include "minesweeper/src/globals"
include "minesweeper/src/menu"
include "minesweeper/src/game"
include "minesweeper/src/endgame"


fn start() {
    display_menu()
}


fn tick() {
    sound_tick()
    
    if game_state == E_GAMESTATE_MENU {
        menu_tick()
    }
    else if game_state == E_GAMESTATE_BOARD {
        game_tick()
    }
    else {
        endgame_tick()
    }
}